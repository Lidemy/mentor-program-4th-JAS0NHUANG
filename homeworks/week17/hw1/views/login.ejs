<!DOCTYPE html>
<%- include('./partials/head') %>
<html>
  <%- include('./partials/header') %>
  <div class="main">
    <div class="main__card">
      <% if (errorMessage.length !== 0) { %>
        <div class="error__message"><%= errorMessage %></div>
      <% } %>
      <form method="post" action="/handle-login">
        <label class="admin__label">Admin </label>
        <input class="admin__input" name="admin">
        <label class="password__label">Password: </label>
        <input class="password__input" name="password" type="password">
        <button type="submit" class="submit__login__btn">Login</button>
      </form>
    </div>
  </div>
  <%- include('./partials/footer') %>
</html>
